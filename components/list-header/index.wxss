/* components/list-header/index.wxss */
.list-header{
  display: flex;
  padding: 50rpx;
  justify-content: space-between;
}
.main_img{
  width: 250rpx;
  border-radius: 15rpx
}
.introduce{
  width: 370rpx;
  overflow: hidden;
  font-size: 32rpx;
  display: flex;
  flex-wrap: wrap;
  align-content: space-between;
}
.title{
  width: 100%;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}
.avatar{
  width: 50rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10rpx;
}
.nickname{
  vertical-align: middle;
}
.description{
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}
.icon{
  width: 60rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.share{
  display: flex;
  margin-right: 15rpx;
  margin-bottom: 30rpx;
}
.share .handle{
  flex: 1;
  text-align: center;
}
.share .count{
  font-size: 35rpx;
  vertical-align: middle;
}