/* components/playlist-item/index.wxss */
.item{
  width: 220rpx;
  display: inline-block;
  margin-right: 20rpx;
  vertical-align: top;
}
.item .top{
  width: 100%;
  position: relative;
}
.item .image{
  width: 100%;
  border-radius: 15rpx;
  display: block;
}
.item .play-count{
  position: absolute;
  right: 0;
  bottom: 0;
  background-color: #000;
  opacity: 0.7;
  color: #fff;
  border-radius: 15rpx;
  font-size: 25rpx;
}
.item .name{
  text-align: left;
  font-size: 32rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}