/* pages/home-music/index.wxss */
page{
  padding: 0 20rpx;
  box-sizing: border-box;
}
.van-search{
  padding: 20rpx 0 !important;
}
.swiper{
  border-radius: 12rpx;
  overflow: hidden;
}
.swiper-item .image{
  width: 100%;
}
.play_bar{
  width: 100%;
  height: 44px;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: rgb(233, 231, 231);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 2px 0px 10px;
  box-sizing: border-box;
}
.left_content,.right_icon{
  display: flex;
  align-items: center;
}
.left_content{
  flex: 1;
  overflow: hidden;
}
.playsong_name{
  margin-left: 10px;
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.music_icon{
  width: 40px;
  height: 40px;
  display: block;
  border-radius: 50%;
  animation: run 8s linear infinite;
}
.play_icon,.next_icon{
  width: 30px;
  height: 30px;
  display: block;
  margin: 0 8px;
}
@keyframes run{
  0%{
    transform: rotate(0);
  }
  100%{
    transform: rotate(360deg);
  }
}