/* pages/song-player/index.wxss */
page{
  width: 100%;
  height: 100%;
}
.song-player{
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}
.bg_img{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(25px);
  z-index: -1;
}
.navbar{
  width: 100%;
  margin: 5px 0;
  text-align: center;
  font-size: 13px;
  color: #808080;
  height: 20px;
}
.actived{
  color: #4fc08d;
}
.song_swiper{
  flex: 1;
}
.content{
  width: 100%;
  height: 100%;
  padding: 0px 27px 12px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}

.content .album_img{
  width: 100%;
  border-radius: 15rpx;
}
.info .name{
  font-size: 45rpx;
  margin: 5px 0;
}
.info .artist{
  font-size: 30rpx;
  color: #808080;
  margin-bottom: 5px;
}
.lyric{
  text-align: center;
  font-size: 30rpx;
  height: 17px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.song_slider{
  width: 100%;
  margin: 0;
}
.song_time{
  font-size: 13px;
  display: flex;
  justify-content: space-between;
}
.operation{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.operation .order,.prev,.next,.music{
  display: block;
  width: 30px;
}
.operation .pause{
  display: block;
  width: 44px;
}
.scroll_view{
  text-align: center;
  padding: 0 30px;
  box-sizing: border-box;
  height: 100%;
}
.lyricItem{
  height: 45px;
  display: flex;
  justify-content: center;
  align-items: center;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}
.lyricItem:first-child{
  padding-top: 100px;
}
.lyricItem:last-child{
  padding-bottom: 50px;
}
.lyricActive{
  color: #4fc08d ;
}
