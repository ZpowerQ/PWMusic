/* pages/main-profile/index.wxss */
page{
  background-color: #efefef;
  padding: 10px;
  box-sizing: border-box;
}
.profile{
  display: flex;
  background-color: #fff;
  padding: 10px;
  align-items: center;
  border-radius: 5px;

}
.profile .avatar{
  width: 40px;
  display: block;
  border-radius: 50%;
}
.profile .nickname{
  margin-left: 8px;
}
.tabs{
  background-color: #fff;
  display: flex;
  margin-top: 10px;
  width: 100%;
  justify-content: space-around;
  padding: 10px;
  box-sizing: border-box;
  border-radius: 5px;
}
.tabs .tab{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tabs .tab_icon{
  width: 25px;
  display: block;
}
.tabs .tab_name{
  margin-top: 5px;
  font-size: 13px;
}
.menulist{
  background-color: #fff;
  border-radius: 5px;
}
.add_menu{
  color: #808080;
  display: flex;
  justify-content: space-between;
  padding: 15rpx 12rpx;
}
.menuItem{
  display: flex;
  padding: 12rpx;
}
.coverImg{
  width: 120rpx;
  border-radius: 5px;
  margin-right: 12rpx;
}
.menuinfo{
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  overflow: hidden;
  align-items: center;
}
.menuName{
  font-size: 34rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}
.count{
  font-size: 32rpx;
  color: #808080;
}
.deleteIcon{
  margin: 10rpx;
}